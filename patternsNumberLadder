#include<iostream>
using namespace std;

void patternNumberLadder(int n);

int main(){

    int rows{};
    cin >> rows;
    patternNumberLadder(rows);

    return 0;
}

void patternNumberLadder(int n)
{
    int number{1};
    for(int i = 1; i <= n; i++)
    {
        for(int j = 1; j <= i; ++j)
        {
            cout << number << " ";
            ++number;
        }
        cout << endl;
    }
    };


